{
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/__tests__/**",
        "!src/**/index.js",
        "!static/**"
    ],
    "testMatch": [
        "src/**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/",
        "/static/"
    ],
    "transform": {
        "^.+\\.js$": "babel-jest"
    }
}